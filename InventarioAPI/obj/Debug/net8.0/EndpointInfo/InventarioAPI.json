            },
            "nullable": true
          }
        },
        "additionalProperties": false
      },
      "ProductoPrecioLoteDto": {
        "type": "object",
        "properties": {
          "productoID": {
            "type": "integer",
            "format": "int32"
          },
          "loteID": {
            "type": "integer",
            "format": "int32"
          },
